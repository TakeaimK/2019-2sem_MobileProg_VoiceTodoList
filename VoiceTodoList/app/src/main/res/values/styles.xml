<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarSize">40sp</item>


    </style>

    <style name="customToastStyle">
        <item name="textBold">true</item>
        <item name="textColor">#000</item>
        <item name="font">@font/roundbold</item>
        <item name="textSize">24sp</item>
        <item name="colorBackground">#FFFFE57F</item>
        <item name="solidBackground">true</item>
        <item name="strokeWidth">5dp</item>
        <item name="strokeColor">#FF82B1FF</item>
        <item name="length">SHORT</item> LONG or SHORT
        <item name="android:layout_gravity">top</item> top or center
        <item name="android:radius">1dp</item>
    </style>

    <style name="customErrorToastStyle">
        <item name="textBold">true</item>
        <item name="textColor">#000</item>
        <item name="font">@font/roundbold</item>
        <item name="textSize">16sp</item>
        <item name="colorBackground">#FFFFE57F</item>
        <item name="solidBackground">true</item>
        <item name="strokeWidth">5dp</item>
        <item name="strokeColor">#FFFF8A80</item>
        <item name="length">LONG</item> LONG or SHORT
        <item name="android:layout_gravity">center</item> top or center
        <item name="android:radius">1dp</item>
    </style>

</resources>
